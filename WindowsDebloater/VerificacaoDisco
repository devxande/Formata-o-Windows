# Executa CHKDSK
$chkdskOutput = cmd /c chkdsk C: /f

# Verifica se há necessidade de agendamento para a verificação
if ($chkdskOutput -like "*Deseja agendar a verificação deste volume para a próxima vez em que o sistema for reiniciado? (S/N)*") {
    # Simula a resposta "S" automaticamente e confirma o agendamento
    echo S | cmd /c chkdsk C: /f
}

# Fecha a janela do PowerShell
exit
